
<% provide :head_tags do %>
<meta name='turbolinks-visit-control' content='reload'>
    <script>
    document.addEventListener("DOMContentLoaded", function(){
        initMap(<%=@billboard.latitude%>, <%=@billboard.longitude%>)
    });


    function initMap(lat, lng) {

    var myCoords = new google.maps.LatLng(lat, lng);

    var mapOptions = {
    center: myCoords,
    zoom: 14
    };

    var map = new google.maps.Map(document.getElementById('map'), mapOptions);

    var marker = new google.maps.Marker({
        position: myCoords,
        map: map
    });

}
    </script>
<% end %>



<div id="single-billboard-content" class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="posted-by">Posted by <%= @billboard.user.username %></div>
      <%= image_tag @billboard.image %>
      <p>
        <div id="map"></div>
      </p>


      <h3><%= @billboard.city %></h3>
      <h4><%= @billboard.street %></h4>
      <h5><%= @billboard.house %></h5>

      <p><%= @billboard.price %></p>
    </div>
  </div><!-- row -->

  <%= render '/requests/requests_form' %>
  <%= render '/requests/show_div' %>
</div>
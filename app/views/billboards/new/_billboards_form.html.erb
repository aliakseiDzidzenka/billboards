<%= form_for(@billboard) do |f| %>
  <%= f.text_field  :city, 
                    maxlength: 50, 
                    placeholder: 'City', 
                    class: 'form-control',
                    required: true, 
                    minlength: 5,
                    maxlength: 50 %>
  <%= f.text_field  :street, 
                    maxlength: 50, 
                    placeholder: 'Street', 
                    class: 'form-control',
                    required: true, 
                    minlength: 3,
                    maxlength: 50 %>
  <%= f.text_field  :house, 
                    maxlength: 20, 
                    placeholder: 'House', 
                    class: 'form-control',
                    required: true, 
                    minlength: 1,
                    maxlength: 20 %>
  <%= f.number_field  :price, 
                    maxlength: 20, 
                    placeholder: 'price', 
                    class: 'form-control',
                    required: true, 
                    minlength: 1,
                    maxlength: 20 %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit "Submit", class: 'form-control' %>
<% end %>

  <h1><%= @user.last_name %></h1>

  <h2><%= @user.first_name %></h2>
  <div class="row">
		<div id="ava">
			<%= image_tag @user.avatar %>
		</div>
	</div>
	<% if @user.admin? %>
  <p><%= 'Admin' %></p>

  <% end %>

  <p><%= @user.email %></p>
  <p><%= @user.username %></p>
  <p><%= @user.birthdate %></p>
  <p><%= @user.phone %></p>
  <p><%= @user.address %></p>

  <% if current_user && current_user.id == @user.id %>
    <%= link_to t('user.edit'), edit_user_registration_path %>
  <% end %>






